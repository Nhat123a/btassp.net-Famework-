@model IEnumerable<Lab1_9.Models.Nhanviencs>

@{
    ViewBag.Title = "Luongcaonhat";
    Layout = "~/Views/Shared/_Layout.cshtml";


}
@if (!string.IsNullOrEmpty(ViewBag.message))
{


    <h3>@ViewBag.message</h3>
    <div>
        @Html.ActionLink("Quay Lại", "Index")
    </div>
}
else
{
    <h2>Hai Nhân Viên có Lương Cao Nhất</h2>


    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Hoten)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gioitinh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ngasinh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Luong)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.hSL)
            </th>
            <th>@Html.DisplayNameFor(mode => mode.phong)</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Hoten)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gioitinh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ngasinh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @item.Luong.ToString("N0")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.hSL)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.phong)
                </td>
            </tr>
        }

    </table>
    <div>
        @Html.ActionLink("Quay Lại", "Index")
    </div>

}
